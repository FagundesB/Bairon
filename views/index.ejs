<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" 
  integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" 
  crossorigin="anonymous">
  <title>Vaga Dev JÃºnior</title>
</head>
<body>
  <div class="container">
    <row>
      <h1 class="text-center">Enter Todo Item</h1>
      <form class="col-6 mx-auto" action="/newtodo" method="post">
        <div class="input-group">
          <input class="form-control" type="text" name="item" placeholder="New task">
          <span><button type="submit" class="btn btn-primary">Submit</button></span>
        </div>
      </form>
    </row>
    <div class="row">
      <ul class="col-6 mx-auto">
        <% for (var i = 0; i < todoList.length; i++) { %>
        <li><%= todoList[i] %></li>
        <form method="POST" action="/newtodo">
          <button type="submit" class="btn btn-danger">Delete</button>
          <% todoList.splice(i) %>
        </form>
        <% } %>
      </ul>

    </div>

  </div>
</body>
</html>